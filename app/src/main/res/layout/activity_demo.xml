<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zmarkan.observablelocation.sample.LocationProviderActivity">

    <Button
        android:id="@+id/button_get_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_updates"/>

    <Button
        android:id="@+id/button_get_single_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_single_update"/>

    <Button
        android:id="@+id/button_unsubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unsubscribe"/>
    
    <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C0C0C"/>
    
    <TextView
        android:id="@+id/textview_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textview_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
</LinearLayout>
